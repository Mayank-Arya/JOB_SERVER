# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB installation
MONGO_URI=mongodb://localhost:27017/job-importer

# For MongoDB Atlas (cloud) - replace with your connection string
# MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/job-importer?retryWrites=true&w=majority

# Redis Configuration
# For local Redis installation
REDIS_URL=redis://localhost:6379

# For Redis Cloud - replace with your connection string
# REDIS_URL=redis://default:password@redis-12345.c1.us-east-1-2.ec2.cloud.redislabs.com:12345

# Worker Configuration
# Number of concurrent jobs each worker can process
WORKER_CONCURRENCY=5

# Cron Schedule
# Format: minute hour day month weekday
# Examples:
# Every hour: 0 * * * *
# Every 30 minutes: */30 * * * *
# Every 6 hours: 0 */6 * * *
# Daily at midnight: 0 0 * * *
CRON_SCHEDULE=0 * * * *

# Job Feed URLs (comma-separated)
# Add your XML feed URLs here
JOB_FEED_URLS=https://jobicy.com/api/v2/remote-jobs.xml,https://www.example.com/jobs.xml

